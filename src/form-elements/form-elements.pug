.screen-wrapper
  h2.title Form elements
  .form-elements__group-elements
    form.form-elements__form
      .form-elements__input-wrapper
        .form-elements__input-condition Default
        label.form-elements__input-label(for="email") Text Field
        input(placeholder = "Email").form-elements__input#email
      .form-elements__input-wrapper
        .form-elements__input-condition Hover / Focus
        label.form-elements__input-label(for="text") Text Field
        input(placeholder = "This is pretty awesome" autofocus).form-elements__input#text
      .form-elements__input-wrapper
        label.form-elements__input-label(for="select") Dropdown
        select.form-elements__input.form-elements__input-select#select
          option(disabled selected value="") Сколько гостей
      .form-elements__input-wrapper
        label.form-elements__input-label(for="input-masked") masked text field
        input(placeholder = "ДД.ММ.ГГГГ").form-elements__input#input-masked
      .form-elements__date-group
        .form-elements__input-wrapper
          label.form-elements__input-label(for="date-dropdown") date Dropdown
          input(type="date").form-elements__input.form-elements__input-select.form-elements__input-date#date-dropdown
        .form-elements__input-wrapper
          label.form-elements__input-label(for="date-dropdown") date Dropdown
          input(type="date" value="2019-08-19").form-elements__input.form-elements__input-select.form-elements__input-date#date-dropdown
